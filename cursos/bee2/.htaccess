<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /curso/bee2/

    # 1. Si el archivo existe, NO reescribir
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # 2. Si el directorio existe, NO reescribir
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 3. Todo lo dem√°s va al router
    RewriteRule ^(.*)$ index.php?uri=$1 [QSA,L]
</IfModule>
